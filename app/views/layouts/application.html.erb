<!DOCTYPE html>
<html>
  <head>
    <title>Input Farm</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

    <meta http-equiv="Content-Type" content="application/xhtml+xml; charset=utf-8" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="robots" content="index, follow" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  </head>
  <body>
    <div id="header">
      <div class='row_fluid'>
        <div id="logo">
          <%=link_to image_tag("logo_trans_med.png",:size=>"225x27"),"/", :style=>"border:false"%>
        </div>
        <div id="header-links">
          <div class='left' style='border-bottom:2px solid #5b9337'>
            <%=link_to "HOME","", :class=>"link_home"%>
          </div>
          <%#=link_to "OUR EXPERTS","#ourexperts", :class=>"smoothScroll link"%> 
          <div class='left'><%=link_to "HOW IT WORKS","#howitworks",:class=>"smoothScroll link"%></div>
          <div class='left'><%=link_to "CONTACT","#contact",:class=>"smoothScroll link"%></div>
        </div>
        <% if flash[:notice].present? %>
          <p id='flash_notice' class='flash_notice'> <%=flash[:notice]%></p>
          <script>
            $(function(){
              $("#flash_notice").fadeOut(1000).fadeIn(1000).fadeOut(1000).fadeIn(1000).fadeOut(1000);
             });
          </script>
          
        <% end %>
      </div>
    </div>
    <%= yield %>
    <div id="footer">
      <div class="row_fluid">
        <div id="copyright">
          <%=link_to image_tag("logo_white_small.png",:size=>"106x14", :style=>"border:none"),"/", :style=>"border:none"%>
        </div>
        <div id="footerlinks"> 
          <%=link_to "HOME","/" %>&nbsp;&nbsp;&nbsp; /&nbsp;&nbsp;&nbsp; 
          <!--<%=link_to "Our Experts","#ourexperts", :class=>"smoothScroll"%> &nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp; -->
          <%=link_to "HOW IT WORKS","#howitworks", :class=>"smoothScroll"%>&nbsp;&nbsp;&nbsp; /&nbsp;&nbsp;&nbsp; 
          <%=link_to "CONTACT","#contact", :class=>"smoothScroll"%>
          <%#=link_to "TERMS & CONDITIONS",""%> 
        </div>
      </div>
    </div>
    <%= javascript_include_tag "application_end" %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-44163429-1', 'inputfarm.com');
      ga('send', 'pageview');

    </script>
  </body>
</html>
